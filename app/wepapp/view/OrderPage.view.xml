<mvc:View
  xmlns:mvc="sap.ui.core.mvc"
  xmlns="sap.m"
  controllerName="ui5.walkthrough.controller.OrderPage"
>
  <Page title="Invoice Details">
    <content>
      <VBox>
        <Label text="Invoice Product"/>
        <Input value="{invoiceModel>/invoice_product}" valueLiveUpdate="true"/>

        <Label text="Invoice Quantity"/>
        <Input value="{invoiceModel>/invoice_quantity}" valueLiveUpdate="true"/>

        <Button text="Create Order" press="onCreateOrder"/>
      </VBox>
    </content>
  </Page>
</mvc:View>