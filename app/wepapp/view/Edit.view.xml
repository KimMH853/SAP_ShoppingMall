<mvc:View
  xmlns:mvc="sap.ui.core.mvc"
  xmlns="sap.m"
  controllerName="ui5.walkthrough.controller.Edit"
>
  <Page>
    <Panel
      headerText="상품수정"
      class="sapUiResponsiveMargin"
      width="auto"
    >
      <content>
        <VBox>
          <Label text="상품명" />
          <Input value="{product>/product_name}" valueLiveUpdate="true" width="60%" />

          <Label text="설명" />
          <Input value="{product>/product_description}" valueLiveUpdate="true" width="60%" />

          <Label text="가격" />
          <Input value="{product>/product_price}" valueLiveUpdate="true" width="60%" />

          <Label text="재고" />
          <Input value="{product>/stock_quantity}" valueLiveUpdate="true" width="60%" />

          <Button text="수정" press="onCreateOrder" />
        </VBox>
      </content>
    </Panel>
  </Page>
</mvc:View>
