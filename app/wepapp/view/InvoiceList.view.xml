<mvc:View
	controllerName="ui5.walkthrough.controller.InvoiceList"
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:grid="sap.ui.layout.cssgrid"
	xmlns:f="sap.f">
	<Slider value="100" liveChange="onSliderMoved" />
	<Panel id="panelForGridList" backgroundDesign="Transparent">
		<headerToolbar>
			<Toolbar height="3rem">
				<Title text="GridList with GridBoxLayout" />
			</Toolbar>
		</headerToolbar>

		<f:GridList
			id="gridList"
			items="{
				path: 'invoiceModel>/',
				sorter: {
					path: 'group',
					descending: false,
					group: true
				}
			}"
			growing="true"
			growingThreshold="4"
			growingScrollToLoad = "true"
			>
			<f:headerToolbar>
				<Toolbar>
					<Title text="GridList, using custom header with SearchField" />
					<ToolbarSpacer />
					<SearchField width="15rem" />
				</Toolbar>
			</f:headerToolbar>

			<f:customLayout>
				<grid:GridBoxLayout boxesPerRowConfig="XL4 L4 M3 S1"/>
			</f:customLayout>

			<f:GridListItem>
				<VBox>
					<VBox class="sapUiSmallMargin">
						<layoutData>
							<FlexItemData growFactor="1" shrinkFactor="0" />
						</layoutData>
						<!-- <Image src="https://i.namu.wiki/i/yiJ_K8E72R314kXBpZwEXBfBYj0oGyA5ZE5dr60fyvv91lwlkWjSsNubdr7uqrA9Gqjxscji36rD1cJi8xTjpVA9BZ1klWHZbAmUs4bZ4j-L7q80WMSuDI46rULmAEECGmQg0UFNNx_QydH25WoJfA.webp" alt="Product Image" width="100%" /> -->
						<Title text="{invoiceModel>product_name}" wrapping="true" />
						<Label text="{invoiceModel>product_description}" wrapping="true" />
					</VBox>
				</VBox>
			</f:GridListItem>
		</f:GridList>
	</Panel>
</mvc:View>