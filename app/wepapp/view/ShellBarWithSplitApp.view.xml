<mvc:View
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:tnt="sap.tnt"
    xmlns:core="sap.ui.core"
    controllerName="ui5.walkthrough.controller.ShellBarWithSplitApp"
>
    <tnt:ToolPage id="toolPage">
        <tnt:header>
            <tnt:ToolHeader>
                <Toolbar width="100%">
                    <Title text="Admin Page" />
                    <ToolbarSpacer />
                    <Button
                        text="home"
                        press="onHomeButtonPress"
                    />
                </Toolbar>
            </tnt:ToolHeader>
        </tnt:header>

        <tnt:sideContent>
            <core:Fragment
                fragmentName="ui5.walkthrough.view.SideNavigation"
                type="XML"
            />
        </tnt:sideContent>

        <tnt:mainContents>
            <NavContainer
                id="pageContainer"
                initialPage="page2"
            >
                <pages>
                    <ScrollContainer
                        id="root1"
                        horizontal="false"
                        vertical="true"
                        height="100%"
                    >
                        <VBox>
                            <HBox justifyContent="End">
                                <Button
                                    text="상품 추가"
                                    press="onTopButton1Press"
                                />
                            </HBox>

                            
                            <!-- 리스트 -->
                            <List
                                id="invoiceList"
                                headerText="{i18n>invoiceListTitle}"
                                class="sapUiResponsiveMargin"
                                width="auto"
                                items="{
								path : 'productoModel>/'
								
							}"
                            >
                                <headerToolbar>
                                    <Toolbar>
                                        <Title text="상품 리스트" />
                                        <ToolbarSpacer />
                                        <SearchField
                                            width="50%"
                                            search=".onFilterInvoices"
                                        />
                                    </Toolbar>
                                </headerToolbar>
                                <items>
                                    <ObjectListItem
                                        title="{productoModel>product_name}"
                                        number="{
										parts: [
											'invoice>ExtendedPrice',
											'view>/currency'
										],
										type: 'sap.ui.model.type.Currency',
										formatOptions: {
											showMeasure: false
										}
										}"
                                        numberUnit="{view>/currency}"
                                        numberState="{= ${prductModel>ExtendedPrice} > 50 ? 'Error' : 'Success' }"
										type="Navigation"
                						press=".onPress" 
                                    >
                                        <firstStatus>
                                            <ObjectStatus
                                                text="{
												path: 'prductModel>Status',
												formatter: '.formatter.statusText'
											}"
                                            />
                                        </firstStatus>
                                    </ObjectListItem>
                                </items>
                            </List>
                        </VBox>
                    </ScrollContainer>
                    <ScrollContainer
                        id="root2"
                        horizontal="false"
                        vertical="true"
                        height="100%"
                    >
                        <Text text="수정하기" />
                    </ScrollContainer>
                    <ScrollContainer
                        id="root3"
                        horizontal="false"
                        vertical="true"
                        height="100%"
                    >
                        <Text text="삭제하기" />
                    </ScrollContainer>
                </pages>
            </NavContainer>
        </tnt:mainContents>
    </tnt:ToolPage>
</mvc:View>
