<mvc:View
	controllerName="ui5.walkthrough.controller.Detail"
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc"
	
	>
	<Page
		title="{product>/product_name}"
		showNavButton="true"
		navButtonPress=".onNavBack"
		>
		<ObjectHeader
			intro="상품 상세"
			title="{product>/product_name}"/>
		<content>
			<ObjectHeader
				title="{product>product_name}"
				titleLevel="H3"
				number="{
					path : 'Price',
					formatter : '.formatter.price'
				}"
				numberUnit="EUR">
				<attributes>
					<ObjectAttribute
						title="상품명"
						text="{product>/product_name}"/>
					<ObjectAttribute
						title="설명"
						text="{product>/product_description}"/>
					<ObjectAttribute
						title="가격"
						text="{product>/product_price}"/>
					<ObjectAttribute
						title="재고"
						text="{product>/stock_quantity}"/>	
					
				</attributes>
				<statuses>
					<ObjectStatus
						text="{
							path : 'Status',
							formatter : '.formatter.statusText'
						}"
						state="{
							path : 'Status',
							formatter : '.formatter.statusState'
						}"/>
				</statuses>
			</ObjectHeader>
			<VBox
				alignItems="Center"
				renderType="Div">
				<Image
					id="productImage"
					src="{product>/product_image}" 
					decorative="true"
					densityAware="false"
					class="sapUiSmallMargin"
					width="100%"
					height="100%">
					<detailBox>
						<LightBox id="lightBox">
							<imageContent>
								<LightBoxItem
									imageSrc="{product>product_image}" 
									title="{product>name}"/>
							</imageContent>
						</LightBox>
					</detailBox>
				</Image>
			</VBox>
		</content>
		<content>
			<FlexBox justifyContent="Center" alignItems="Start">
            <items>
                <Button text="수정" press="onEditPress" class="myCustomButton"/>
                <Button text="삭제" press="onDeleltePress" class="myCustomButton"/>
            </items>
        </FlexBox>
		</content>	
	</Page>
</mvc:View>
