<mvc:View
  controllerName="ui5.walkthrough.controller.RequestList"
  xmlns="sap.m"
  xmlns:mvc="sap.ui.core.mvc"
  displayBlock="true">

  <Page title="{i18n>detailPageTitle}">
    <!-- 예시: requestModel에 바인딩된 데이터를 리스트로 표시 -->
    <List items="{requestModel>/requests}">
      <StandardListItem
        title="{requestModel>invoice_product}"
        description="{requestModel>invoice_quantity}"/>
    </List>
  </Page>

</mvc:View>
