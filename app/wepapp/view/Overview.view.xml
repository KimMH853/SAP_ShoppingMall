<mvc:View
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:tnt="sap.tnt" 
    controllerName="ui5.walkthrough.controller.App">

    <tnt:ToolPage id="toolPage">
        <tnt:header>
            <!-- ToolHeader를 사용 -->
            <tnt:ToolHeader>
                <Toolbar width="100%">
                    <!-- 툴바 내용 추가 -->
                    <Title text="Shopping Mall"/>
                    <ToolbarSpacer/>
                    <Button text="admin" press="onAdminButtonPress"/>
                </Toolbar>
            </tnt:ToolHeader>
        </tnt:header>
        <tnt:mainContents>
            <!-- 여러 페이지를 담을 NavContainer 추가 -->
            <NavContainer id="navContainer">
                <!-- 첫 번째 페이지 -->
                <Page id="page1" title="상품 소개">
                    <content>
                        <mvc:XMLView viewName="ui5.walkthrough.view.InvoiceList" />
                    </content>
                </Page>

            </NavContainer>
        </tnt:mainContents>
    </tnt:ToolPage>

</mvc:View>
